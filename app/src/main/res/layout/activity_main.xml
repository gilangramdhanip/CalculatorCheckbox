    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/recycleItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_item_checkbox" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/linearButton"
        android:layout_below="@id/recycleItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@drawable/ic_plus"
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:src="@drawable/ic_substraction"
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:src="@drawable/ic_multi"
            android:id="@+id/multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="%"
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@id/linearButton"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="30sp"
            android:text="Hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="30sp"
            android:gravity="end"
            android:layout_gravity="end"
            android:text="1"
            android:id="@+id/hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


